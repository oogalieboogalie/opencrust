<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.opencrust.gateway</string>

    <key>ProgramArguments</key>
    <array>
        <!-- Update this path to match your OpenCrust binary location -->
        <string>/usr/local/bin/opencrust</string>
        <string>daemon</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>WorkingDirectory</key>
    <string>~/.opencrust</string>

    <key>StandardOutPath</key>
    <string>~/Library/Logs/opencrust/gateway.log</string>

    <key>StandardErrorPath</key>
    <string>~/Library/Logs/opencrust/gateway.err</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>RUST_LOG</key>
        <string>info</string>
    </dict>

    <key>ThrottleInterval</key>
    <integer>5</integer>

    <key>ProcessType</key>
    <string>Background</string>
</dict>
</plist>
